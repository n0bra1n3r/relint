{
    "name": "relint",
    "displayName": "relint",
    "publisher": "n0brain3r",
    "description": "Regex-based linting for any language",
    "version": "0.4.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/n0bra1n3r/relint.git"
    },
    "license": "MIT",
    "keywords": [
        "productivity",
        "visual studio code",
        "rules",
        "notes",
        "linter",
        "regex"
    ],
    "categories": [
        "Linters",
        "Other",
        "Programming Languages",
        "Debuggers"
    ],
    "engines": {
        "vscode": "^1.50.0"
    },
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "configuration": {
            "title": "relint",
            "properties": {
                "relint": {
                    "type": "object",
                    "required": [
                        "rules"
                    ],
                    "properties": {
                        "language": {
                            "type": "string",
                            "default": "plaintext",
                            "minLength": 1,
                            "description": "The default programming language the rules apply to."
                        },
                        "rules": {
                            "type": "array",
                            "minItems": 1,
                            "default": [],
                            "items": {
                                "required": [
                                    "name",
                                    "pattern",
                                    "message"
                                ],
                                "properties": {
                                    "language": {
                                        "type": "string",
                                        "default": "plaintext",
                                        "minLength": 1,
                                        "description": "The programming language the rule applies to."
                                    },
                                    "name": {
                                        "type": "string",
                                        "minLength": 1,
                                        "description": "A concise name for the rule."
                                    },
                                    "pattern": {
                                        "type": "string",
                                        "minLength": 1,
                                        "description": "A regular expression pattern to match a rule violation."
                                    },
                                    "maxLines": {
                                        "type": "integer",
                                        "default": 1,
                                        "exclusiveMinimum": -1,
                                        "description": "The maximum number of lines the pattern matches at a time. The default is 1 for `replace` fixes, and 0 for `reorder` fixes."
                                    },
                                    "message": {
                                        "type": "string",
                                        "minLength": 1,
                                        "description": "The message to print when a rule violation is found."
                                    },
                                    "severity": {
                                        "type": "string",
                                        "enum": [
                                            "Error",
                                            "Warning",
                                            "Information",
                                            "Hint"
                                        ],
                                        "default": "Warning",
                                        "description": "Severity of the diagnostic to display."
                                    },
                                    "fix": {
                                        "type": "string",
                                        "description": "The fix to apply. Substitution tokens starting with `$` can be used."
                                    },
                                    "fixType": {
                                        "type": "string",
                                        "enum": [
                                            "reorder_asc",
                                            "reorder_desc",
                                            "replace"
                                        ],
                                        "default": "replace",
                                        "description": "The type of fix to apply. `reorder_*` fixes can be controlled using substitution tokens in `quicFix`."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "main": "./out/extension",
    "scripts": {
        "publish": "vsce package && vsce publish",
        "build": "vsce package",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "tslint -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.20.15",
        "@types/vscode": "^1.50.0",
        "eslint": "^7.30.0",
        "typescript": "^4.3.5",
        "vsce": "^1.95.0"
    }
}
